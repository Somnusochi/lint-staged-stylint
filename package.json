{
  "name": "Linter-demo",
  "version": "1.0.0",
  "description": "A demo project for Linters",
  "main": "index.js",
  "annotation": "",
  "scripts": {
    "format": "prettier-eslint --write \"src/**/*.js\"",
    "lint": "./node_modules/.bin/eslint --ext .js,.vue src --fix",
    "prettier:vue": "prettier --write './src/*.vue'",
    "prettier:js": "prettier --write './src/*.js'",
    "prettier:css": "prettier --write './src/**/*.{css,less,scss}'",
    "prettier:write": "prettier --write './src/**/*.*'",
    "precise-commits": "precise-commits",
    "stylint": "stylint ./src/**/*.styl",
    "stylint-format": "stylus-supremacy format ./src/**/*.styl --options .stylintrc --replace"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-prettier": "^2.6.0",
    "ghooks": "^2.0.4",
    "husky": "^1.0.0-rc.8",
    "lint-staged": "^7.2.0",
    "precise-commits": "^1.0.2",
    "prettier": "1.13.5",
    "prettier-eslint-cli": "^4.7.1",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1",
    "stylint": "^1.5.9",
    "stylus-supremacy": "^2.11.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "npm install",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.styl": [
      "stylus-supremacy format --options .stylintrc --replace",
      "stylint",
      "git add"
    ],
    "src/**/*.{css,less,scss}": [
      "prettier --write",
      "stylelint",
      "git add"
    ],
    "src/**/*.{js,json}": [
      "node_modules/.bin/eslint --fix",
      "git add"
    ],
    "src/**/*.vue": [
      "node_modules/.bin/eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {}
}
