{
    "env": {
        "es6": true,
        "browser":true,
        "node":true
    },
    "extends": [
        "airbnb-base",
        "prettier", // eslint-config-prettier
        "plugin:prettier/recommended" // 1.Enables eslint-plugin-prettier; 2.Sets the prettier/prettier rule to "error"; 3.Extends the eslint-config-prettier configuration.
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "html", // for linting .vue
        "prettier" // eslint-plugin-prettier
    ],
    "rules": {
        "prettier/prettier": "error" //eslint-plugin-prettier
    }
}